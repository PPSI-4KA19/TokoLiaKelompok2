<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProduk">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout104"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/editProdukToolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="?attr/colorOnPrimary"
            android:minHeight="?attr/actionBarSize"
            android:paddingStart="15dp"
            android:theme="?attr/actionBarTheme"
            app:buttonGravity="center_vertical"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
            app:title="Edit Produk"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title2" />

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/view102"
        style="@style/Divider"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout104" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout104">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView109"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama Produk"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="*"
                android:textColor="@color/redish"
                android:textSize="20sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/editEditNamaProduk"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/background_recycler"
            android:ems="10"
            android:hint="Isi dengan nama produk"
            android:inputType="text"
            android:paddingStart="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView115"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Harga Jual"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView116"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="*"
                android:textColor="@color/redish"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editEditHargaJual"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_recycler"
            android:ems="10"
            android:hint="Isi dengan nominal harga jual"
            android:inputType="number"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/textView119"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Harga Modal"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editEditHargaModal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_recycler"
            android:ems="10"
            android:hint="Isi dengan nominal harga modal"
            android:inputType="number"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/textView117"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Stok"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editEditStok"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_recycler"
            android:ems="10"
            android:hint="Isi jumlah stok"
            android:inputType="number"
            android:paddingStart="10dp" />

        <Button
            android:id="@+id/buttonSimpanEditProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Simpan"
            android:textSize="20sp"
            app:cornerRadius="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>