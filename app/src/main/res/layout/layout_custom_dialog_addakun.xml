<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@drawable/background_cardtransaksi"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView40"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Penambahan Akun"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/buttonClose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:backgroundTint="@color/black" />
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="47dp"
        android:text="Ketik nama akun baru :"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textAddAkunWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:fontFamily="@font/poppins"
        android:text="Kolom harus diisi"
        android:textColor="@color/redish" />

    <EditText
        android:id="@+id/editTextIsiNamaKasbon"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_recycler"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Isi nama"
        android:inputType="text"
        android:paddingStart="10dp" />

    <Button
        android:id="@+id/buttonSimpanAddKasbon"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Simpan"
        android:textSize="16sp"
        app:cornerRadius="8dp" />
</LinearLayout>