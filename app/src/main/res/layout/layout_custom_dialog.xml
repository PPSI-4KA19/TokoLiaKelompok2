<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogRestok"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_cardtransaksi"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="35dp"
    android:paddingVertical="35dp">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Restok"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Masukkan informasi jumlah barang baru yang ingin ditambahkan"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editRestokJumlah"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/background_recycler"
        android:ems="10"
        android:gravity="center"
        android:hint="Isi jumlah stok tambahan"
        android:inputType="number" />

    <EditText
        android:id="@+id/editRestokModal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/background_recycler"
        android:ems="10"
        android:gravity="center"
        android:hint="Isi harga modal baru (opsional)"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSimpanRestok"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginVertical="5dp"
        android:text="Restok"
        android:textSize="20sp"
        app:cornerRadius="20dp" />
</LinearLayout>